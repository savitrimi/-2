<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>ตรวจสอบจำนวนวันในเดือน</title>
</head>
<body>

<h2>ตรวจสอบจำนวนวันในเดือน</h2>

<form method="post">
    <label for="month">กรอกชื่อเดือน (ภาษาไทย):</label>
    <input type="text" name="month" id="month" required>
    <input type="submit" value="ตรวจสอบจำนวนวัน">
</form>

<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $month = trim($_POST["month"]);

    switch ($month) {
        case "มกราคม":
        case "มีนาคม":
        case "พฤษภาคม":
        case "กรกฎาคม":
        case "สิงหาคม":
        case "ตุลาคม":
        case "ธันวาคม":
            echo "<p><strong>$month มี 31 วัน</strong></p>";
            break;

        case "เมษายน":
        case "มิถุนายน":
        case "กันยายน":
        case "พฤศจิกายน":
            echo "<p><strong>$month มี 30 วัน</strong></p>";
            break;

        case "กุมภาพันธ์":
            echo "<p><strong>$month มี 28 หรือ 29 วัน</strong></p>";
            break;

        default:
            echo "<p style='color:red;'><strong>ชื่อเดือนไม่ถูกต้อง กรุณากรอกใหม่</strong></p>";
    }
}
?>

</body>
</html>
