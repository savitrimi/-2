<?php
$age = 25; // กำหนดอายุ

switch (true) {
    case ($age > 60):
        echo "คุณอยู่ในวัยชรา";
        break;
    case ($age > 40):
        echo "คุณอยู่ในวัยกลางคน";
        break;
    case ($age > 20):
        echo "คุณอยู่ในวัยหนุ่มสาว";
        break;
    case ($age > 12):
        echo "คุณอยู่ในวัยรุ่น";
        break;
    case ($age > 6):
        echo "คุณอยู่ในวัยเด็ก";
        break;
    default:
        echo "คุณอยู่ในวัยทารก";
        break;
}
?>
